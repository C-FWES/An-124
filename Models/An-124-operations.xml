<?xml version="1.0"?>
<PropertyList>

<!-- Fuel Truck -->

<model>
	<name>fuel-truck</name>
	<path>Aircraft/An-124/Models/Operations/Fuel-Truck/Fuel_Truck_Short_VolvoFM.xml</path>
	<offsets>
		<x-m>-12</x-m>
     	 	<y-m>5</y-m>
     		 <z-m>0.5</z-m>
	</offsets>
	<condition>
		<and>
		<less-than>	
	         <property>/velocities/groundspeed-kt</property>
	         <value>1</value>
	         </less-than>
		<equals>
			<property>/services/fuel-truck/enable</property>
			<value>1</value>
		</equals>
		</and>
	</condition>
</model>

</PropertyList>

