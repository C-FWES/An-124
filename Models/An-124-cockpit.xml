<?xml version="1.0"?>

<PropertyList>

<path>Aircraft/An-124/Models/Cockpit/Cockpit.ac</path>


<!-- Movimiento general con la puerta delantera-->
	<animation>
		<type>translate</type>
		<property>systems/shake/shaking</property>
		<axis>
			<x1-m>0.0</x1-m>
			<y1-m>0.0</y1-m>
			<z1-m>0.0</z1-m>
			<x2-m>0.5</x2-m>
			<y2-m>-0.5</y2-m>
			<z2-m> 0.8</z2-m>
		</axis>
	</animation>


<animation>
  <type>rotate</type>
  <property>sim/model/door-positions/front/position-norm</property>
 <interpolation>
    <entry>
      <ind>1.0</ind>
      <dep>0.50</dep>
    </entry>
    <entry>
      <ind>0.75</ind>
      <dep>0.40</dep>
    </entry>
    <entry>
      <ind>0.25</ind>
      <dep>0.20</dep>
    </entry>
    <entry>
      <ind>0.0</ind>
      <dep>0.0</dep>
    </entry>
  </interpolation>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>-1</y>
   <z>0</z>
  </axis>
 </animation>


  <animation>
    <type>material</type>
    <object-name>cockpitshell_0_1_1</object-name>
    <object-name>CP-Bulkheads</object-name>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.25 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>


