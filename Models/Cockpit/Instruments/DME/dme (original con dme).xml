<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<path>dme.ac</path>

	<animation>
		<name>NAV 1 on/off</name>
		<type>select</type>
		<object-name>Off-1</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/outputs/nav[0]</property>
				<value>15</value>
			</less-than>
		</condition>
	</animation>
	<animation>
		<name>NAV 2 on/off</name>
		<type>select</type>
		<object-name>Off-2</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/outputs/nav[1]</property>
				<value>15</value>
			</less-than>
		</condition>
	</animation>


<!--distancias 0-->

	<animation>
		<type>textranslate</type>
		<object-name>Dist1-100</object-name>
		<property>instrumentation/dme[0]/indicated-distance-nm</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Dist1-10</object-name>
		<property>instrumentation/dme[0]/indicated-distance-nm</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Dist1-1</object-name>
		<property>instrumentation/dme[0]/indicated-distance-nm</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Dist1-.1</object-name>
		<property>instrumentation/dme[0]/indicated-distance-nm</property>
		<step>0.1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>


<!--distancias 1-->

	<animation>
		<type>textranslate</type>
		<object-name>Dist2-100</object-name>
		<property>instrumentation/dme[1]/indicated-distance-nm</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Dist2-10</object-name>
		<property>instrumentation/dme[1]/indicated-distance-nm</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Dist2-1</object-name>
		<property>instrumentation/dme[1]/indicated-distance-nm</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Dist2-.1</object-name>
		<property>instrumentation/dme[1]/indicated-distance-nm</property>
		<step>0.1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>


<animation>
    <type>material</type>
	<object-name>Bezel</object-name>
	<object-name>Screens</object-name>
    <emission>
      <red>   0.5 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
	<factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>


<!-- LoD -->
 <animation>
   <type>range</type>
   <min-m>0</min-m>
   <max-m>20</max-m>
 </animation>

</PropertyList>
