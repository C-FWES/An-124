<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>disk1</object-name>
  <object-name>disk2</object-name>
  <object-name>rect</object-name>
</animation>
  
<!--Стрелка-->
<animation>
    <type>rotate</type>
    <object-name>rect</object-name>
    <!--<property>/surface-positions/pitch-trim-pos-norm</property>-->
	<property>surface-positions/flap-pos-norm</property>
    <interpolation>
      <entry><ind>0.0</ind>	<dep>-57.0</dep></entry>
      <entry><ind>20.0</ind>	<dep>-27.0</dep></entry>
      <entry><ind>35.0</ind>	<dep>9.0</dep></entry>
    </interpolation>
		<center>
	   <x-m>0.000</x-m>
	   <y-m>-0.005</y-m>
 		  <z-m>0.000</z-m>
		</center>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>


