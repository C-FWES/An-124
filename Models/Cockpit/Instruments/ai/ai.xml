<PropertyList>

  <path>ai.ac</path>

<animation>
  <type>scale</type>
  <x-offset>0.8</x-offset>
  <y-offset>0.8</y-offset>
  <z-offset>0.8</z-offset>
 </animation>

  <animation>
    <object-name>fond</object-name>
    <object-name>fond2</object-name>
    <object-name>knobs</object-name>
    <object-name>ball</object-name>
    <object-name>center</object-name>

    <object-name>marker</object-name>
    <object-name>face</object-name>
    <object-name>cache</object-name>
    <object-name>cache2</object-name>
    <object-name>zoneball</object-name>
    <object-name>barrevertical</object-name>
    <object-name>barrehorizontal</object-name>
    <object-name>craft</object-name>
    <object-name>pointer</object-name>

    <object-name>vitre</object-name>
    <object-name>vitre2</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/An-124/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
    <object-name>vitre2</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>marker</object-name>
    <object-name>face</object-name>
    <object-name>cache</object-name>
    <object-name>cache2</object-name>
    <object-name>zoneball</object-name>
    <object-name>barrevertical</object-name>
    <object-name>barrehorizontal</object-name>
    <object-name>craft</object-name>
    <object-name>pointer</object-name>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>craft</object-name>
    <property>orientation/roll-deg</property>
    <max-deg>  60 </max-deg>
    <min-deg> -60 </min-deg>
    <center>
      <x-m> -0.00097 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.00010 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>face</object-name>
    <property>orientation/pitch-deg</property>
    <factor> 0.0046 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
